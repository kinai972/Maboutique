{% extends 'base.html.twig' %}

{% block title %}Nos produits - MaBoutique !{% endblock %}

{% block content %}

<div class="row">
    <div class="col-md-3">
        <h2>Filtres</h2>
        {{ form(form) }}
    </div>
    <div class="col-md-9">
        <h1>Nos produits</h1>

        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="product-item text-center">
                        <a href="{{ path('product', { slug: product.slug }) }}">
                            <img class="img-fluid" src="/uploads/images/{{ product.illustration }}" alt="{{ product.name }}">
                        </a>
                        <h5>{{ product.name }}</h5>
                        <span class="product-subtitle">{{ product.subtitle }}</span>
                        <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
